<?xml version="1.0"?>
<module name="@PACKAGE@" version="@VERSION@" release="@RELEASE@" basecomponent="no">

    <description>jQuery is a fast and concise JavaScript Library that simplifies HTML document traversing, event handling, animating, and Ajax interactions for rapid web development.</description>

    <parameters>
        <param name="jquery" label="jquery download URL" type="text"
               volatile="yes" onupgrade="W"
               default="ftp://ftp.anakeen.com/third-party/jquery-@VERSION@.zip"/>
    </parameters>

    <post-install>
        <download href="@jquery" action="programs/jquery_install@PACKAGE@">
            <label lang="en">Download and install jquery @VERSION@
            </label>
        </download>
    </post-install>

    <post-upgrade>
        <download href="@jquery" action="programs/jquery_install@PACKAGE@">
            <label lang="en">Download and install jquery @VERSION@
            </label>
        </download>
    </post-upgrade>

</module>